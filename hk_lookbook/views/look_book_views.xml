<odoo>
  <record id="view_look_book_theme_form" model="ir.ui.view">
    <field name="name">look.book.theme.form</field>
    <field name="model">look.book.theme</field>
    <field name="arch" type="xml">
      <form string="Thème Look Book">
        <sheet>
          <group>
            <field name="name"/>
            <field name="description"/>
            <field name="image" widget="image"/>
            <field name="website_published"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_look_book_theme_tree" model="ir.ui.view">
    <field name="name">look.book.theme.tree</field>
    <field name="model">look.book.theme</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="description"/>
        <field name="website_published"/>
      </tree>
    </field>
  </record>

  <record id="action_look_book_theme" model="ir.actions.act_window">
    <field name="name">Thèmes Look Book</field>
    <field name="res_model">look.book.theme</field>
    <field name="view_mode">tree,form</field>
  </record>



    <menuitem id="menu_look_book_root" name="Look Book" sequence="10"/>

  <menuitem id="menu_look_book_theme"
            name="Thèmes"
            parent="menu_look_book_root"
            action="action_look_book_theme"
            sequence="1"/>
</odoo>
